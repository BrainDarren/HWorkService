<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zdpractice.hworkservice.MainActivity">


    <FrameLayout
        android:id="@+id/lay_base"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0"
        >

        <LinearLayout
            android:id="@+id/main_weixin"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="39dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/main_weixin_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="@android:color/black"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_mess"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivOrder"
                android:layout_width="39dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/main_mess_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单"
                android:textColor="@android:color/black"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_faxian"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivPersonal"
                android:layout_width="39dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/main_faxian_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="@android:color/black"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
